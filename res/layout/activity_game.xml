<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/levelbg"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ghosthunter.GameActivity" >

    <!-- Shows images from drawable resources -->

    <ImageView
        android:id="@+id/ghost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ghost" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scorebox"
        android:layout_alignTop="@+id/scorebox"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="7dp"
        android:gravity="right"
        android:text="999,999,999"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/spaceship1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/downbutton"
        android:layout_centerVertical="true"
        android:src="@drawable/spaceship1" />

    <Button
        android:id="@+id/startGhostMovement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/button"
        android:minWidth="150dp"
        android:onClick="startGhostMovement"
        android:text="Start"
        android:textSize="40sp" />

    <ImageButton
        android:id="@+id/upbutton"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_alignParentTop="true"
        android:background="@drawable/up"
        android:onClick="moveUp" />

    <ImageView
        android:id="@+id/scorebox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignParentRight="true"
        android:src="@drawable/scorebox" />

    <ImageButton
        android:id="@+id/downbutton"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/down"
        android:onClick="moveDown" />

    <ImageButton
        android:id="@+id/shootbutton"
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_alignLeft="@+id/spaceship1"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:background="@drawable/shoot"
        android:onClick="shoot"
        android:scaleType="center" />

</RelativeLayout>